<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/fullScreenView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView android:id="@+id/imgView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_header"/>

    <RelativeLayout android:id="@+id/buttons_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgView_header"
        android:padding="20dp">

        <Button android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/button_continue"
            android:textSize="35sp"/>

        <Button android:id="@+id/button_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_continue"
            android:layout_marginTop="10dp"
            android:text="@string/button_play"
            android:textSize="35sp"/>

        <Button android:id="@+id/button_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_play"
            android:layout_marginTop="10dp"
            android:text="@string/button_results"
            android:textSize="35sp"/>

        <Button android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_results"
            android:layout_marginTop="10dp"
            android:text="@string/button_settings"
            android:textSize="35sp"/>

    </RelativeLayout>

</RelativeLayout>